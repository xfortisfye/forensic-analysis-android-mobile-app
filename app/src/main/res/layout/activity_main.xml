<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/testingText"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="328dp"
            android:src="@drawable/icarus" />

        <Button
            android:id="@+id/startAnalyseButton"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="139dp"
            android:layout_marginTop="541dp"
            android:layout_marginBottom="202dp"
            android:text="Select File to analyse" />

        <Button
            android:id="@+id/FileSystem"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="630dp"
            android:layout_marginEnd="141dp"
            android:layout_marginBottom="128dp"
            android:text="Select File to carve" />

        <Button
            android:id="@+id/partitioninfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="630dp"
            android:layout_marginEnd="143dp"
            android:layout_marginBottom="57dp"
            android:text="View Partition Info" />

    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>